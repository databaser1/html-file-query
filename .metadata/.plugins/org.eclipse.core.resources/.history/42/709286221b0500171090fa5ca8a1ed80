var app = angular.module('app', []);

app.config(
  [
    '$controllerProvider', 
    function($controllerProvider) {
      $controllerProvider.allowGlobals();
    }
  ]
);

app.value('url', '');

app.controller(
  'planReaderController', 
  function($scope, url) {
    var date = new Date();
    var dateStr = String(date.getMonth() + 1) + "/" + String(date.getDate()) + "/" + String(date.getFullYear());
    $('#date-picker').val(dateStr);
  }
);